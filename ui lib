local WorldTab = Window:AddTab({Name = "World"})

local EnvironmentSection = WorldTab:AddSection({
    Name = "Environment",
    Side = "Left"
})

EnvironmentSection:AddLabel({Text = "â—ˆ Lighting"})

EnvironmentSection:AddToggle({
    Name = "Fullbright",
    Default = false,
    Flag = "Fullbright",
    Callback = function(Value)
        local Lighting = game:GetService("Lighting")
        if Value then
            Lighting.Brightness = 2
            Lighting.GlobalShadows = false
            Lighting.FogEnd = 100000
        else
            Lighting.Brightness = 1
            Lighting.GlobalShadows = true
            Lighting.FogEnd = 10000
        end
    end
})

EnvironmentSection:AddSlider({
    Name = "Time",
    Min = 0,
    Max = 24,
    Default = 12,
    Increment = 0.5,
    Suffix = ":00",
    Flag = "TimeOfDay",
    Callback = function(Value)
        game:GetService("Lighting").ClockTime = Value
    end
})

EnvironmentSection:AddColorPicker({
    Name = "Ambient",
    Default = Color3.fromRGB(180, 180, 180),
    Flag = "AmbientColor",
    Callback = function(Color)
        game:GetService("Lighting").Ambient = Color
    end
})

local TeleportSection = WorldTab:AddSection({
    Name = "Teleport",
    Side = "Right"
})

TeleportSection:AddLabel({Text = "â—ˆ Locations"})

local Locations = {
    {Name = "Spawn", Pos = Vector3.new(0, 10, 0)},
    {Name = "Shop", Pos = Vector3.new(100, 10, 50)},
    {Name = "Arena", Pos = Vector3.new(-100, 10, 200)},
}

for _, loc in ipairs(Locations) do
    TeleportSection:AddButton({
        Name = "â†’ " .. loc.Name,
        Callback = function()
            local Player = game:GetService("Players").LocalPlayer
            if Player and Player.Character then
                local HRP = Player.Character:FindFirstChild("HumanoidRootPart")
                if HRP then
                    HRP.CFrame = CFrame.new(loc.Pos)
                    Window:Notify({
                        Title = "Teleported",
                        Content = "Went to " .. loc.Name,
                        Type = "Success",
                        Duration = 2
                    })
                end
            end
        end
    })
end

TeleportSection:AddTextBox({
    Name = "Coords",
    Default = "0, 50, 0",
    Placeholder = "X, Y, Z",
    Flag = "CustomCoords",
    Callback = function(Text)
        print("Coords:", Text)
    end
})

