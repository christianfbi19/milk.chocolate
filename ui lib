local SettingsTab = Window:AddTab({Name = "Settings"})

local UISection = SettingsTab:AddSection({
    Name = "UI",
    Side = "Left"
})

UISection:AddLabel({Text = "â—ˆ Interface"})

UISection:AddDropdown({
    Name = "Theme",
    Options = Window:GetThemes(),
    Default = "Milk Chocolate",
    Flag = "UITheme",
    Callback = function(Value)
        Window:SetTheme(Value)
        Window:Notify({
            Title = "Theme",
            Content = "Applied: " .. Value,
            Type = "Success",
            Duration = 2
        })
    end
})

UISection:AddToggle({
    Name = "Show Watermark",
    Default = true,
    Flag = "ShowWatermark",
    Callback = function(Value)
        if Window.Watermark then Window.Watermark.Visible = Value end
    end
})

UISection:AddToggle({
    Name = "Show Keybinds",
    Default = true,
    Flag = "ShowKeybinds",
    Callback = function(Value)
        if Window.KeybindWidget then Window.KeybindWidget.Visible = Value end
    end
})

local ConfigSection = SettingsTab:AddSection({
    Name = "Configs",
    Side = "Right"
})

ConfigSection:AddLabel({Text = "â—ˆ Configuration"})

local ConfigNameBox = ConfigSection:AddTextBox({
    Name = "Config Name",
    Default = "default",
    Placeholder = "Enter name...",
    Flag = "ConfigName",
    Callback = function(Text)
        Window.ConfigName = Text
    end
})

local ConfigDropdown = ConfigSection:AddDropdown({
    Name = "Select Config",
    Options = #Window:GetConfigs() > 0 and Window:GetConfigs() or {"default"},
    Default = "default",
    Flag = "SelectedConfig",
    Callback = function(Value)
        Window.ConfigName = Value
        ConfigNameBox:Set(Value)
    end
})

ConfigSection:AddButton({
    Name = "Save Config",
    Callback = function()
        local name = Window.Flags.ConfigName or "default"
        Window:SaveConfig(name)
        local configs = Window:GetConfigs()
        if #configs > 0 then ConfigDropdown:Refresh(configs) end
    end
})

ConfigSection:AddButton({
    Name = "Load Config",
    Callback = function()
        local name = Window.Flags.ConfigName or "default"
        Window:LoadConfig(name)
    end
})

ConfigSection:AddButton({
    Name = "Delete Config",
    Callback = function()
        local name = Window.Flags.ConfigName or "default"
        if name ~= "default" then
            Window:DeleteConfig(name)
            local configs = Window:GetConfigs()
            if #configs > 0 then ConfigDropdown:Refresh(configs) end
            ConfigNameBox:Set("default")
        else
            Window:Notify({Title = "Error", Content = "Can't delete default!", Type = "Error", Duration = 2})
        end
    end
})

ConfigSection:AddButton({
    Name = "Export Config",
    Callback = function()
        Window:ExportConfig()
    end
})

local CreditsSection = SettingsTab:AddSection({
    Name = "Credits",
    Side = "Right"
})

CreditsSection:AddLabel({Text = "â—ˆ milk.chocolate v2.3.1"})

CreditsSection:AddButton({
    Name = "Print Flags",
    Callback = function()
        print("\n=== FLAGS ===")
        for Flag, Value in pairs(Window.Flags) do
            print(Flag .. ":", tostring(Value))
        end
        print("=============\n")
        Window:Notify({Title = "Flags", Content = "Printed to console!", Type = "Info", Duration = 2})
    end
})

CreditsSection:AddButton({
    Name = "Destroy UI",
    Callback = function()
        Window:Notify({Title = "Goodbye!", Content = "Thanks for using!", Type = "Warning", Duration = 2})
        task.wait(2)
        Window:Destroy()
    end
})

