    })
    
    self.KeybindTitleLabel = Utility.Create("TextLabel", {
        Name = "Title",
        Parent = self.KeybindWidgetTitle,
        BackgroundTransparency = 1,
        Position = UDim2.new(0, 8, 0, 2),
        Size = UDim2.new(1, -16, 0, 16),
        Font = Enum.Font.GothamBold,
        Text = "Keybinds",
        TextColor3 = Colors.Text,
        TextSize = 10,
